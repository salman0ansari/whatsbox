# Server
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_PATH=./data/whatsbox.db
WA_SESSION_PATH=./data/wa_session.db

# Storage
TEMP_DIR=./data/temp
MAX_UPLOAD_SIZE=2147483648
CHUNK_SIZE=10485760

# File settings
DEFAULT_EXPIRY_DAYS=30
MAX_EXPIRY_DAYS=30
SHORT_ID_LENGTH=6

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=./data/logs/whatsbox.log
LOG_FILE_MAX_SIZE=100
LOG_FILE_MAX_BACKUPS=10

# Stats
STATS_FLUSH_INTERVAL=60
STATS_HOURLY_RETENTION=168

# Cleanup jobs
CLEANUP_INTERVAL=3600
INCOMPLETE_UPLOAD_TTL=86400

# Graceful shutdown
SHUTDOWN_TIMEOUT=300

# Admin authentication
# Set a strong password to enable admin auth. Leave empty to disable auth.
ADMIN_PASSWORD=
# Secret for signing session tokens. Auto-generated if not set.
ADMIN_SESSION_SECRET=
# Session duration in seconds (default: 24 hours)
ADMIN_SESSION_MAX_AGE=86400
